<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booklibrary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Book Library"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

<!--        This is the activity label for the Favorites Page-->
        <activity
            android:name=".FavoriteBooks"
            android:label="Favorites"
            android:parentActivityName=".MainActivity" />

<!--        This is the activity label for the Update Page-->
        <activity
            android:name=".UpdateActivity"
            android:parentActivityName=".MainActivity" />

<!--        This is the activity label for the Adding Book Page-->
        <activity
            android:name=".AddActivity"
            android:label="Add Book"
            android:parentActivityName=".MainActivity" />

<!--        This is the activity label for the Main Page-->
        <activity
            android:name=".MainActivity"
            android:label="Library">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>